<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neomorph_background_color"
    tools:context=".Activity.AdvanceBookingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themColor"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Booking List"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:textSize="21sp" />
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_layout_background"
                    app:tabMode="scrollable"
                    app:tabBackground="@drawable/tab_layout_selector"
                    app:tabSelectedTextColor="@color/themColor"
                    app:tabIndicatorHeight="0dp"
                    app:tabRippleColor="@null"
                    app:tabTextAppearance="@style/TabTextAppearance">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outside Dhaka"
                        android:textAlignment="center" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Inside Dhaka"
                        android:textAlignment="center"/>
                </com.google.android.material.tabs.TabLayout>

                <RelativeLayout
                    android:id="@+id/moreRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/moreTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/notificationCount"
                        android:drawableStart="@drawable/ic_more_24" />

                    <TextView
                        android:id="@+id/notificationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:id="@+id/layerTwo">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/bookingViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>




</RelativeLayout>