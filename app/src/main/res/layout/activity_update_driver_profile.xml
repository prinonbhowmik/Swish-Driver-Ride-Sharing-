<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Activity.UpdateDriverProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_collapseMode="parallax"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profile_back">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:onClick="backPress2"
            android:src="@drawable/ic_white_arrow_back_24"/>
        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:text="Update"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
        <FrameLayout
            android:id="@+id/frame_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/driverProfileIV"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/logo"
                android:transitionName="imageTransition"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />

            <ImageView
                android:id="@+id/cameraIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:padding="12dp"
                android:background="@drawable/custom_round2"
                android:src="@drawable/ic_photo_camera_black_24" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/name_LT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/r1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#676262"
        android:textSize="21sp"/>
    <EditText
        android:id="@+id/updateNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_LT"
        android:textColor="#000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/email_LT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/updateNameET"
        android:textColor="#676262"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textSize="21sp"/>
    <EditText
        android:id="@+id/updateEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_LT"
        android:textColor="#000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/address_LT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@+id/updateEmailET"
        android:textColor="#676262"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:textSize="21sp"/>
    <EditText
        android:id="@+id/updateAddressET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_LT"
        android:textColor="#000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"/>


    <!--<com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progrssbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        app:lottie_loop="true" />  -->
    </RelativeLayout>
</ScrollView>